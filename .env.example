# NVIDIA API Configuration
# Get your API key from: https://build.nvidia.com/explore/discover
NVIDIA_API_KEY=

# NVIDIA API Base URL (default: https://integrate.api.nvidia.com/v1)
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1

# NVIDIA Models Configuration
NVIDIA_EMBEDDING_MODEL=nvidia/nv-embedqa-e5-v5
NVIDIA_LLM_MODEL=nvidia/llama-3.1-nemotron-70b-instruct

# OCR Configuration
# Set to 'true' to enable OCR for scanned PDFs
ENABLE_OCR=false
NVIDIA_OCR_MODEL=nvidia/ocr-nvble-12b-vision
OCR_RENDER_SCALE=2.0

# Document Processing Configuration
# Chunk size for text splitting (200-2000)
CHUNK_SIZE=900
# Overlap between chunks (0-499)
CHUNK_OVERLAP=150
# Number of top results to retrieve (1-12)
TOP_K=6

# LLM Configuration
# Temperature for guidance generation (0.0-1.0, lower = more focused)
GUIDANCE_TEMPERATURE=0.2

# Server Configuration (Optional)
# PORT=8000
# HOST=0.0.0.0
# LOG_LEVEL=INFO

# Development/Production Environment
# ENV=development
